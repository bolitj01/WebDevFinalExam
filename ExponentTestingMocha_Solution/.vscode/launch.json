{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Mocha Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "--colors",
        "${workspaceFolder}/test/**/*.mjs"
      ],
      "cwd": "${workspaceFolder}",
    }
  ]
}
